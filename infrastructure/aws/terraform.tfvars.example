# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# AWS Configuration
aws_region = "us-west-2"

# Project Configuration
project_name = "mamba-training"
environment  = "dev"

# Instance Configuration
instance_types = [
  "g4dn.xlarge",    # 1x T4, 4 vCPU, 16GB RAM - ~$0.526/hr on-demand
  "g4dn.2xlarge",   # 1x T4, 8 vCPU, 32GB RAM - ~$0.752/hr on-demand
  "g4dn.4xlarge",   # 1x T4, 16 vCPU, 64GB RAM - ~$1.204/hr on-demand
  "p3.2xlarge"      # 1x V100, 8 vCPU, 61GB RAM - ~$3.06/hr on-demand
]

# Spot instance pricing (set lower than on-demand for cost savings)
max_spot_price = "0.50"  # Maximum $0.50/hour for spot instances

# Auto Scaling Configuration
min_instances     = 0  # Scale to zero when not training
max_instances     = 4  # Maximum 4 instances for distributed training
desired_instances = 1  # Start with 1 instance

# SSH Access (IMPORTANT: Restrict this in production!)
key_pair_name = "your-aws-key-pair-name"  # Replace with your AWS key pair
allowed_ssh_cidrs = [
  "0.0.0.0/0"  # WARNING: This allows SSH from anywhere - restrict in production!
  # Example: ["203.0.113.0/24", "198.51.100.0/24"]  # Your office/home IP ranges
]

